<?xml version="1.0" encoding="utf-8"?>
<package>

  <!--
      NPC 交互协议定义文件
            
      NPC 交互说明：
      
            Client                                    Server
          
                           GSMSG_TALKNPC_REQ
         玩家点击NPC       ==================>

                           GSMSG_TALKNPC_NTF
                          <==================
                        
                         GSMSG_NPCSELECTION_REQ
    玩家选择Server_cmd   =======================>
  -->
  <defines>
    <define name="MAX_NPC_MSG_LEN" value="10240" />
  </defines>

  <request id="81" msg="GSMSG_TALKNPC_REQ">
    <item name="dwObjectId" type="unsigned int" />
  </request>
  
  <response id="82" msg="GSMSG_TALKNPC_NTF">
    <item name="dwObjectId" type="unsigned int" />
    <item name="wLen" type="unsigned short" />
    <item name="szMessage" type="string" count="MAX_NPC_MSG_LEN" />
  </response>
  
  <request id="83" msg="GSMSG_NPCSELECTION_REQ">
    <item name="wSelection" type="unsigned short" />
  </request>
</package>